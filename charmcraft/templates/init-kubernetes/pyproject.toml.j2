[project]
name = "{{ name }}"
version = "0.0.1"
requires-python = ">=3.10"

# Dependencies of the charm code in src/
dependencies = [
    "ops >=2.22,<3",
]

[dependency-groups]
# Dependencies of charmlibs (from their PYDEPS)
charmlib-pydeps = []
# Dependencies of code in tests/unit/
unit = [
    "ops[testing]",
    "pytest",
]
# Dependencies of code in tests/integration/
integration = [
    "pytest",
    "pytest-operator",
]
# Dependencies needed to actually run the tests
run-static = [
    "pyright",
]
run-unit = [
    "coverage[toml]",
]
run-integration = [
    "juju",
]

# Testing tools configuration
[tool.coverage.run]
branch = true

[tool.coverage.report]
show_missing = true

[tool.pytest.ini_options]
minversion = "6.0"
log_cli_level = "INFO"

# Linting tools configuration
[tool.ruff]
line-length = 99
lint.select = ["E", "W", "F", "C", "N", "D", "I001"]
lint.extend-ignore = [
    "D105",
    "D107",
    "D203",
    "D204",
    "D213",
    "D215",
    "D400",
    "D404",
    "D406",
    "D407",
    "D408",
    "D409",
    "D413",
]
extend-exclude = ["__pycache__", "*.egg_info"]
lint.per-file-ignores = {"tests/*" = ["D100","D101","D102","D103","D104"]}

[tool.ruff.lint.mccabe]
max-complexity = 10

[tool.codespell]
skip = "build,lib,venv,icon.svg,.tox,.git,.mypy_cache,.ruff_cache,.coverage"

[tool.pyright]
include = [
    "src/**/*.py",
    "tests/**/*.py",
]
